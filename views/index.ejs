<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokedex</title>
    <link rel="stylesheet" href="/style.css" type="text/css" />
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
  </head>
    <header>
      <h1>Pokedex</h1>
    </header>

  <body>
    <main>
      <% pokedex.forEach(element => { %>
      <a href="/detalhes/<%= element.id %> ">
        <div class="card-container">
          <div class="header-card">
            <span class="card-id"> <%= element.id %> </span>
            <span class="card-number"> <%= element.num %> </span>
          </div>
          <div class="main-card">
            <img src="<%= element.img %> " alt="<%= element.name %> " />
            <div class="card-name"><%= element.name %></div>
            <div class="data-card">
              <span class="width"> <%= element.weight %> </span>
              <span class="height"> <%= element.height %> </span>
            </div>
          </div>
          <div class="footer-card">
            <% element.type.forEach(type => { %>
            <ul id="pokemon-type">
              <li><%= type %></li>
            </ul>
            <% }) %>
          </div>
        </div>
      </a>
      <% }) %>
    </main>

    <script>
      const colors = {
        fire: "#FDDFDF",
        grass: "#DEFDE0",
        electric: "#FCF7DE",
        water: "#DEF3FD",
        ground: "#f4e7da",
        rock: "#d5d5d4",
        fairy: "#fceaff",
        poison: "#98d7a5",
        bug: "#f8d5a3",
        dragon: "#97b3e6",
        psychic: "#eaeda1",
        flying: "#F5F5F5",
        fighting: "#E6E0D4",
        normal: "#F5F5F5",
      };
      const pokemonType = $("#pokemon-type li");
      for (let i = 0; i <= pokemonType.length; i++) {
        switch (pokemonType[i].innerText) {
          case "Grass":
            pokemonType[i].style.backgroundColor = `${colors.grass}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Fire":
            pokemonType[i].style.backgroundColor = `${colors.fire}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Electric":
            pokemonType[i].style.backgroundColor = `${colors.electric}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Poison":
            pokemonType[i].style.backgroundColor = `${colors.poison}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Water":
            pokemonType[i].style.backgroundColor = `${colors.water}`;
            pokemonType[i].style.color = `#000009`;
            break;
          
          case "Ground":
            pokemonType[i].style.backgroundColor = `${colors.ground}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Rock":
            pokemonType[i].style.backgroundColor = `${colors.rock}`;
            pokemonType[i].style.color = `#000009`;
            break;
          
          case "Fairy":
            pokemonType[i].style.backgroundColor = `${colors.fairy}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Bug":
            pokemonType[i].style.backgroundColor = `${colors.bug}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Dragon":
            pokemonType[i].style.backgroundColor = `${colors.dragon}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Psychic":
            pokemonType[i].style.backgroundColor = `${colors.psychic}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Flying":
            pokemonType[i].style.backgroundColor = `${colors.flying}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Fighting":
            pokemonType[i].style.backgroundColor = `${colors.fighting}`;
            pokemonType[i].style.color = `#000009`;
            break;

          case "Normal":
            pokemonType[i].style.backgroundColor = `${colors.normal}`;
            pokemonType[i].style.color = `#000009`;
            break;

          default:
            break;
        }
      }
    </script>
  </body>
</html>
